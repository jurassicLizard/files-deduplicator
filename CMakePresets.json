{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "cacheVariables": {
        "vcpkgRoot": {
          "type": "PATH",
          "value": "${sourceDir}/vcpkg-not-configured"
        }
      }
    },
    {
      "name": "linux-debug",
      "displayName": "Linux Debug (System Dependencies)",
      "binaryDir": "${sourceDir}/build/linux-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "PDCPP_ENABLE_TESTING_WITH_ASAN": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-release",
      "displayName": "Linux Release (System Dependencies)",
      "binaryDir": "${sourceDir}/build/linux-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "windows-debug",
      "inherits": "base",
      "hidden": true,
      "displayName": "Windows Debug with vcpkg",
      "binaryDir": "${sourceDir}/build/windows-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "$cache{vcpkgRoot}/scripts/buildsystems/vcpkg.cmake",
        "PDCPP_ENABLE_TESTING": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-release",
      "inherits": "base",
      "hidden": true,
      "displayName": "Windows Release with vcpkg",
      "binaryDir": "${sourceDir}/build/windows-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "$cache{vcpkgRoot}/scripts/buildsystems/vcpkg.cmake"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "macos-debug",
      "inherits": "base",
      "hidden": true,
      "displayName": "macOS Debug with vcpkg",
      "binaryDir": "${sourceDir}/build/macos-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "$cache{vcpkgRoot}/scripts/buildsystems/vcpkg.cmake",
        "PDCPP_ENABLE_TESTING": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "macos-release",
      "inherits": "base",
      "hidden": true,
      "displayName": "macOS Release with vcpkg",
      "binaryDir": "${sourceDir}/build/macos-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "$cache{vcpkgRoot}/scripts/buildsystems/vcpkg.cmake"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "linux-debug",
      "configurePreset": "linux-debug"
    },
    {
      "name": "linux-release",
      "configurePreset": "linux-release"
    },
    {
      "name": "windows-debug",
      "hidden": true,
      "configurePreset": "windows-debug"
    },
    {
      "name": "windows-release",
      "hidden": true,
      "configurePreset": "windows-release"
    },
    {
      "name": "macos-debug",
      "hidden": true,
      "configurePreset": "macos-debug"
    },
    {
      "name": "macos-release",
      "hidden": true,
      "configurePreset": "macos-release"
    }
  ],
  "testPresets": [
    {
      "name": "linux-debug",
      "configurePreset": "linux-debug",
      "output": {"outputOnFailure": true}
    },
    {
      "name": "windows-debug",
      "hidden": true,
      "configurePreset": "windows-debug",
      "output": {"outputOnFailure": true}
    },
    {
      "name": "macos-debug",
      "hidden": true,
      "configurePreset": "macos-debug",
      "output": {"outputOnFailure": true}
    }
  ]
}